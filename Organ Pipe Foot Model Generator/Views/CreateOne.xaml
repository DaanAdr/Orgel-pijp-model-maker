<UserControl x:Class="Organ_Pipe_Foot_Model_Generator.Views.CreateOne"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Organ_Pipe_Foot_Model_Generator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid>
        <!--#region User input-->
        <Label x:Name="lblTopDiameter" Content="Bovendiameter (T):" HorizontalAlignment="Left" Margin="13,18,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbTopDiameter" HorizontalAlignment="Left" Margin="180,22,0,0" TextWrapping="Wrap" Text="150" VerticalAlignment="Top" Width="120" PreviewTextInput="txbTopDiameter_PreviewTextInput"/>

        <Label x:Name="lblBottomDiameter" Content="Onderdiameter (B):" HorizontalAlignment="Left" Margin="13,44,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.504,1.427"/>
        <TextBox x:Name="txbBottomDiameter" HorizontalAlignment="Left" Margin="180,48,0,0" TextWrapping="Wrap" Text="50" VerticalAlignment="Top" Width="120" PreviewTextInput="txbBottomDiameter_PreviewTextInput"/>

        <Label x:Name="lblHeight" Content="Hoogte (H):" HorizontalAlignment="Left" Margin="13,70,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.46,-0.923"/>
        <TextBox x:Name="txbHeight" HorizontalAlignment="Left" Margin="180,74,0,0" TextWrapping="Wrap" Text="200" VerticalAlignment="Top" Width="120" PreviewTextInput="txbHeight_PreviewTextInput"/>

        <CheckBox x:Name="ckbIsOuterDiameter" Content="Boven- en Onderdiameters zijn buitendiameters" HorizontalAlignment="Left" Margin="13,124,0,0" VerticalAlignment="Top" IsChecked="True" Click="ckbIsOuterDiameter_Click"/>

        <Label x:Name="lblMetalThickness" Content="Wand dikte:" HorizontalAlignment="Left" Margin="13,146,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbMetalThickness" HorizontalAlignment="Left" Margin="180,150,0,0" TextWrapping="Wrap" Text="1.5" VerticalAlignment="Top" Width="120" PreviewTextInput="txbMetalThickness_PreviewTextInput"/>

        <Button x:Name="btnCalculatePipeFootMeasurements" Content="Bereken resterende maten" HorizontalAlignment="Left" Margin="13,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.631,2.724" Click="btnCalculatePipeFootMeasurements_Click"/>

        <Image x:Name="imgFrustum" HorizontalAlignment="Left" Height="175" Margin="379,22,0,0" VerticalAlignment="Top" Width="Auto" Source="/Images/frustum.png" />
        <!--#endregion-->

        <!--#region Values to be calculated-->
        <Label x:Name="lblLengthSlantedSide" Content="Lengte schuine zijde (R):" HorizontalAlignment="Left" Margin="10,321,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbLengthSlantedSide" HorizontalAlignment="Left" Margin="177,325,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>

        <Label x:Name="lblLengthInnerDiameter" Content="Lengte onderdiameter (L):" HorizontalAlignment="Left" Margin="10,347,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbLengthInnerDiameter" HorizontalAlignment="Left" Margin="177,351,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" IsReadOnly="true"/>

        <Label x:Name="lblLengthOuterDiameter" Content="Lengte bovendiameter (M):" HorizontalAlignment="Left" Margin="10,373,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbLengthOuterDiameter" HorizontalAlignment="Left" Margin="177,377,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" IsReadOnly="true"/>

        <Label x:Name="lblSmallRadius" Content="Kleine radius/straal (P):" HorizontalAlignment="Left" Margin="10,399,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbSmallRadius" HorizontalAlignment="Left" Margin="177,403,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>

        <Label x:Name="lblLargeRadius" Content="Grote radius/straal (Q):" HorizontalAlignment="Left" Margin="10,425,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbLargeRadius" HorizontalAlignment="Left" Margin="177,429,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>

        <Label x:Name="lblCornerDegrees" Content="Graden hoek (A):" HorizontalAlignment="Left" Margin="10,451,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbCornerDegrees" HorizontalAlignment="Left" Margin="177,455,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>

        <Button x:Name="btnSaveModel" Content="Model opslaan" HorizontalAlignment="Left" Margin="10,493,0,0" VerticalAlignment="Top" Click="btnSaveModel_Click" IsEnabled="False"/>

        <Image x:Name="imgTemplate" HorizontalAlignment="Left" Height="175" Margin="379,229,0,0" VerticalAlignment="Top" Width="Auto" Source="/Images/template.png"/>

        <CheckBox x:Name="ckbLabiumWidth" Content="Markeer labium" HorizontalAlignment="Left" Margin="13,191,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblLabiumWidth" Content="Labium breedte:" HorizontalAlignment="Left" Margin="10,211,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbLabiumWIdth" HorizontalAlignment="Left" Margin="180,219,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="120"/>
        <!--#endregion-->
    </Grid>
</UserControl>
