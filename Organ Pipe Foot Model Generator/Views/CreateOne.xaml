<UserControl x:Class="Organ_Pipe_Foot_Model_Generator.Views.CreateOne"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Organ_Pipe_Foot_Model_Generator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <!--#region Required input-->
        <!-- Top Diameter -->
        <Label x:Name="lblTopDiameter" Content="Bovendiameter (T):" HorizontalAlignment="Left" Margin="13,18,0,0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="0"/>
        <TextBox x:Name="txbTopDiameter" HorizontalAlignment="Left" Margin="13,22,0,0" TextWrapping="Wrap" Text="150" VerticalAlignment="Top" Width="120" PreviewTextInput="txbTopDiameter_PreviewTextInput" Grid.Column="1" Grid.Row="0"/>
        
        <!-- Bottom Diameter -->
        <Label x:Name="lblBottomDiameter" Content="Onderdiameter (B):" HorizontalAlignment="Left" Margin="13,18,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.504,1.427" Grid.Column="0" Grid.Row="1"/>
        <TextBox x:Name="txbBottomDiameter" HorizontalAlignment="Left" Margin="13,22,0,0" TextWrapping="Wrap" Text="50" VerticalAlignment="Top" Width="120" PreviewTextInput="txbBottomDiameter_PreviewTextInput" Grid.Column="1" Grid.Row="1"/>
        
        <!-- Height -->
        <Label x:Name="lblHeight" Content="Hoogte (H):" HorizontalAlignment="Left" Margin="13,18,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.46,-0.923" Grid.Column="0" Grid.Row="2"/>
        <TextBox x:Name="txbHeight" HorizontalAlignment="Left" Margin="13,22,0,0" TextWrapping="Wrap" Text="200" VerticalAlignment="Top" Width="120" PreviewTextInput="txbHeight_PreviewTextInput" Grid.Column="1" Grid.Row="2"/>
        <!--#endregion-->
        
        <!--#region Additional input-->
        <!-- Metal Thickness -->
        <CheckBox x:Name="ckbIsOuterDiameter" Content="Boven- en Onderdiameters zijn buitendiameters" HorizontalAlignment="Left" Margin="13,18,0,0" VerticalAlignment="Top" IsChecked="True" Click="ckbIsOuterDiameter_Click" Grid.Row="3"/>
        <Label x:Name="lblMetalThickness" Content="Wand dikte:" HorizontalAlignment="Left" Margin="13,18,0,0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="4"/>
        <TextBox x:Name="txbMetalThickness" HorizontalAlignment="Left" Margin="13,13,0,0" TextWrapping="Wrap" Text="1.5" VerticalAlignment="Top" Width="120" PreviewTextInput="txbMetalThickness_PreviewTextInput" Grid.Column="1" Grid.Row="4"/>

        <!-- Labium Width -->
        <CheckBox x:Name="ckbLabiumWidth" Content="Markeer labium" HorizontalAlignment="Left" Margin="13,18,0,0" VerticalAlignment="Top" Grid.Row="5"/>

        <Label x:Name="lblLabiumWidth" Content="Labium breedte:" HorizontalAlignment="Left" Margin="13,18,0,0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="6"/>
        <TextBox x:Name="txbLabiumWIdth" HorizontalAlignment="Left" Margin="13,18,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="120" Grid.Column="1" Grid.Row="6"/>
        <!--#endregion-->
    </Grid>
</UserControl>
